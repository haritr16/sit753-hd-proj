pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/haritr16/sit753-hd-proj.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                powershell 'node -v' 
                powershell 'npm -v'
                powershell 'npm install'
            }
        }

        stage('Build') {
            steps {
                powershell 'npm run build'
            }
        }

        stage('Test') {
            steps {
                powershell 'npm test'
            }
           
        }

        stage('Deploy') {
            steps {
                script {
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'hari1661', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        powershell """
                        \$password = '${DOCKER_HUB_PASSWORD}'
                        echo \$password | docker login -u '${DOCKER_HUB_USERNAME}' --password-stdin
                        """
                    }

                    // Check Docker login status
                    powershell 'docker info'

                    // Stop and remove existing containers
                    powershell 'docker-compose down'

                    // Build and start containers
                    powershell 'docker-compose up -d --build'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/build/*', allowEmptyArchive: true
            }
        }
    }
}
