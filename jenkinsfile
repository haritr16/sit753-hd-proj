pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/haritr16/sit753-hd-proj.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                powershell 'node -v' 
                powershell 'npm -v'
                powershell 'npm install'
            }
        }

        stage('Build') {
            steps {
                powershell 'npm run build'

                powershell '''
                            $DOCKER_HUB_USERNAME = "hari1661"
                            $DOCKER_HUB_PASSWORD = "Dockerhari"
                            docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD
                         '''
                 powershell 'docker build -t hari1661/sit753hd .'
            }
        }

        stage('Test') {
            steps {
                powershell 'npm test'
            }
           
        }

         stage('Deploy') {
            steps {
                script {
                    
                    powershell '''
                            $DOCKER_HUB_USERNAME = "hari1661"
                            $DOCKER_HUB_PASSWORD = "Dockerhari"
                            docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD
                         '''

                    powershell '''
                        $containerId = docker ps -q --filter "name=myapp_container"
                        if ($containerId) {
                            docker stop $containerId
                            docker rm $containerId
                        }
                    '''
                    
                    powershell 'docker run -d -p 500:3000 hari1661/sit753hd'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/build/*', allowEmptyArchive: true
            }
        }
    }
}
