pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/haritr16/sit753-hd-proj.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                powershell 'node -v' 
                powershell 'npm -v'
                powershell 'npm install'
            }
        }

        stage('Build') {
            steps {
                powershell 'npm run build'
            }
        }

        stage('Test') {
            steps {
                powershell 'npm test'
            }
           
        }

        stage('Deploy') {
            steps {
                script {
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'hari1661', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        // Docker login command
                        powershell '''
                        $password = "${env:DOCKER_HUB_PASSWORD}" | ConvertTo-SecureString -AsPlainText -Force
                        $credential = New-Object System.Management.Automation.PSCredential("${env:DOCKER_HUB_USERNAME}", $password)
                        echo $credential.GetNetworkCredential().Password | docker login -u $credential.UserName --password-stdin
                        '''
                    }

                    // Check Docker login status
                    powershell 'docker info'

                    // Stop and remove existing containers
                    powershell 'docker-compose down'

                    // Build and start containers
                    powershell 'docker-compose up -d --build'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/build/*', allowEmptyArchive: true
            }
        }
    }
}
