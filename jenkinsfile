pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/haritr16/sit753-hd-proj.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                powershell 'node -v' 
                powershell 'npm -v'
                powershell 'npm install'
            }
        }

        stage('Build') {
            steps {
                powershell 'npm run build'
            }
        }

        stage('Test') {
            steps {
                powershell 'npm test'
            }
           
        }

         stage('Deploy') {
            steps {
                script {
                    // Login to Docker Hub
                    // withCredentials([usernamePassword(credentialsId: 'hari1661', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                    //     powershell '''
                    //         $Env:DOCKER_HUB_PASSWORD | docker login -u $Env:DOCKER_HUB_USERNAME --password-stdin
                    //     '''
                    // }

                    powershell '''
                            $DOCKER_HUB_USERNAME = "hari1661"
                            $DOCKER_HUB_PASSWORD = "Dockerhari"
                            docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD
                         '''

                    // // Build Docker image
                    // powershell 'docker build -t myapp:latest .'

                    // // Run Docker container
                    // powershell 'docker run -d -p 80:3000 --name myapp_container myapp:latest'

                    // powershell 'docker-compose down'
                    // powershell 'docker-compose up -d --build'

                    powershell 'docker build -t hari1661/sit753hd .'
                    powershell 'docker run -d -p 500:3000 hari1661/sit753hd'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/build/*', allowEmptyArchive: true
            }
        }
    }
}
